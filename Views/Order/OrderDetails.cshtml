@model OrderDetailsViewModel


<link rel="stylesheet" href="~/css/OrderDetails.css" />

<section>
    <h2>Order Details</h2>
    <p><strong>Order ID:</strong> @($"ORD-{Model.OrderID:X4}-{Model.OrderDate:yyyyMMdd}")</p>
    <p><strong>Payment Type:</strong> @Model.PaymentType</p>
    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Is Delivered:</strong> @(Model.IsDelivered ? "Yes" : "No")</p>
    <p><strong>Total Quantity:</strong> @Model.Quantity</p>
    <p><strong>Total Price of The Order:</strong> $@Model.TotalPriceOfOrder.ToString("0.00")</p>

    <h3>Products</h3>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price ($)</th>
                <th>Quantity</th>
                <th>Total Price of Product ($)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ProductDetails)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice.ToString("0.00")</td>
                    <td>@product.ProductQuantity</td>
                    <td>@product.TotalPriceOfProduct.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="button-container">
        <a asp-controller="Profile" asp-action="UserDetails" class="btn btn-back">Back to Profile</a>
    </div>
</section>
